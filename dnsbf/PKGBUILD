# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=dnsbf
pkgver=svn
pkgrel=1
pkgdesc="search for available domain names in an IP range"
arch=('i686' 'x86_64')
url=('http://code.google.com/p/dnsbf')
license=('BSD 3 clause')
makedepends=('subversion')
depends=('python2')
md5sums=('')

_svntrunk=('http://dnsbf.googlecode.com/svn/trunk/')

package() {
	# CHECKOUT CODEBASE
  svn co ${_svntrunk} ${pkgname}

  # FIX PYTHON SHEBANGS
  find "${srcdir}"/${pkgname} -type f -exec sed -i 's/#!\/usr\/bin\/python/#!\/usr\/bin\/python2/g' {} \; 

  cd "${srcdir}"/${pkgname}
  install -dm755 ${pkgdir}/usr/bin/${pkgname}
  cp --preserve=mode -r * ${pkgdir}/usr/bin/${pkgname}

  # CREATE A SOFTLINK AS dnsbf
  ln -s ${pkgdir}/usr/bin/dnsbf/dnsbf.py ${pkgdir}/usr/bin/dnsbfpy
}
