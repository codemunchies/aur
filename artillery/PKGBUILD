# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=artillery
pkgver=git
pkgrel=1
pkgdesc="a combination of a honeypot, file-system monitoring, system hardening, and overall health of a server to create a comprehensive way to secure a system"
arch=('i686' 'x86_64')
url=('https://www.trustedsec.com/downloads/artillery/')
license=('BSD 3 clause')
makedepends=('git')
depends=('python2')
md5sums=('')

_gitrepo=('https://github.com/trustedsec/artillery/')

package() {
	# CLONE REPOSITORY
  git clone ${_gitrepo} ${pkgname}

	# FIX PYTHON SHEBANGS
  find "${srcdir}"/${pkgname} -type f -exec sed -i 's/#!\/usr\/bin\/python/#!\/usr\/bin\/python2/g' {} \;

  cd "${srcdir}"
  install -dm755 ${pkgdir}/usr/bin
  cp --preserve=mode -r * ${pkgdir}/usr/bin
}

