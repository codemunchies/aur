# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=fang
pkgver=git
pkgrel=1
pkgdesc="a multi service threaded MD5 cracker"
arch=('i686' 'x86_64')
url=('https://github.com/evilsocket/fang')
license=('GPL2')
makedepends=('git')
depends=('python2')
md5sums=('')

_gitrepo=('https://github.com/evilsocket/fang')

package() {
	# CLONE REPOSITORY
  git clone ${_gitrepo} ${pkgname}

  # FIX PYTHON SHEBANGS
  find "${srcdir}"/${pkgname} -type f -exec sed -i 's/#!\/usr\/bin\/python/#!\/usr\/bin\/python2/g' {} \;

  cd "${srcdir}"/${pkgname}
  install -dm755 ${pkgdir}/usr/bin/${pkgname}
  cp --preserve=mode -r * ${pkgdir}/usr/bin/${pkgname}
}
