# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=peepdf
pkgver=svn
pkgrel=3
pkgdesc="a python tool to explore PDF files in order to find out if the file can be harmful or not"
arch=('i686' 'x86_64')
url=('http://code.google.com/p/peepdf/')
license=('GPL3')
makedepends=('subversion')
depends=('python2')
md5sums=('')

_svntrunk=('http://peepdf.googlecode.com/svn/trunk/')

package() {
	# CHECKOUT CODEBASE
  svn co ${_svntrunk} ${pkgname}

	# FIX PYTHON SHEBANGS
  find "${srcdir}"/${pkgname} -type f -exec sed -i 's/#!\/usr\/bin\/env\spython/#!\/usr\/bin\/python2/g' {} \; 

  cd "${srcdir}"/${pkgname}
  install -dm755 ${pkgdir}/usr/bin/${pkgname}
  cp --preserve=mode -r * ${pkgdir}/usr/bin/${pkgname}
}
