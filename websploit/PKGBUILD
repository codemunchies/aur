# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=websploit
pkgver=2.0.4
pkgrel=3
pkgdesc="an open source project for, social engineering works, scanning, crawling and analysis, automatic exploiter, and network attacks"
arch=('i686' 'x86_64')
url=('http://code.google.com/p/websploit/')
license=('Unknown')
source=("${pkgname}-${pkgver}.tar.gz::http://sourceforge.net/projects/websploit/files/WebSploit%20Framework%20V.${pkgver}/WebSploit%20Framework%20V.2.0.4.tar.gz")
depends=('python2' 'scapy')
md5sums=('e0f9f75aad766e1f6ffefae171550529')

package() {
	# UNCOMPRESS NESTED PACKAGE
  cd "${srcdir}"/"Easy Install"
  tar -zxpf ${pkgname}-${pkgver}.tar.gz

  # FIX PYTHON SHEBANGS
  find "${srcdir}"/"Easy Install"/${pkgname} -type f -exec sed -i 's/#!\/usr\/bin\/env\spython/#!\/usr\/bin\/python2/g' {} \;
  
  # COPY FILES
  cd "${srcdir}"/"Easy Install"/${pkgname}
  install -dm755 ${pkgdir}/usr/bin/${pkgname}
  cp --preserve=mode -r * ${pkgdir}/usr/bin/${pkgname}
}
