# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=hashid
pkgver=1.1
pkgrel=2
pkgdesc="software to identify the different types of hashes used to encrypt data and especially passwords"
arch=('i686' 'x86_64')
url=('http://code.google.com/p/hash-identifier')
license=('GPL3')
depends=('python2')
makedepends=('subversion')
source=('svn+http://hash-identifier.googlecode.com/svn/trunk/')
md5sums=('SKIP')

package() {
  cd "$srcdir/trunk/Hash_ID_v1.1"

  install -dm755 "$pkgdir/usr/bin"
  install -dm755 "$pkgdir/usr/share/hashid"

  install -m755 Hash_ID.py "$pkgdir/usr/share/hashid"

  cat > "$pkgdir/usr/bin/hashid" <<EOF
#!/bin/sh
cd /usr/share/hashid
python2 Hash_ID.py "\@"
EOF
  chmod +x "$pkgdir/usr/bin/hashid"
}
